<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FCFCFC"
         >
<LinearLayout 
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <CheckBox
                android:id="@+id/cb_shopcar_inner"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:button="@drawable/checkbox_checked_style" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/tv_shopcar_inner_image"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shopcar_item" />
</LinearLayout>
      <RelativeLayout
         android:visibility="gone"
        android:id="@+id/rl_shopcar_edit_normal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             >

            <TextView
                android:id="@+id/tv_shopcar_inner_title"
                style="@style/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alice Handmade 派对婚礼甜品 金色小清新蛋糕甜品。" />

            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/tv_shopcar_inner_param"
                style="@style/gray_12_line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_below="@id/tv_shopcar_inner_title"
                android:text="颜色分类：白色；尺码160/84A/S" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" >

                <TextView
                    android:id="@+id/saidan_rmb"
                    style="@style/item_price_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="¥" />

                <TextView
                    android:id="@+id/tv_shopcar_inner_price"
                    style="@style/red_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/saidan_rmb"
                    android:text="168.00" />
                <TextView
                    android:layout_marginLeft="16dp"
                    android:id="@+id/tv_shopcar_inner_oldprice"
                    style="@style/gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_shopcar_inner_price"
                    android:text="¥258.00" />

                <TextView
                    android:id="@+id/tv_shopcar_inner_count"
                    style="@style/item_content_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="1" />

                <TextView
                    style="@style/item_content_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv_shopcar_inner_count"
                    android:text="X" />
            </RelativeLayout>
        </RelativeLayout>
        
        <LinearLayout
            
            android:id="@+id/ll_shopcar_edit_press"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
             >
        
            <LinearLayout
                android:padding="10dp"
                 android:layout_height="match_parent"
            android:layout_weight="3"
                android:layout_width="0dp"
            android:orientation="vertical"
             >
          <LinearLayout
              android:layout_weight="1"
               android:layout_height="0dp"
              android:gravity="top"
                android:layout_width="wrap_content"
            android:orientation="horizontal"
             >
        <ImageView 
            android:id="@+id/iv_shopcar_inner_reduce"
            android:background="@drawable/btn_reduce"
              android:layout_height="wrap_content"
                android:layout_width="wrap_content"
            
            />
        <TextView 
             android:id="@+id/tv_shopcar_inner_num"
            android:gravity="center"
            style="@style/black_14"
            android:text="2"
              android:layout_height="28dp"
                android:layout_width="28dp"
            
            />
        <ImageView 
             android:id="@+id/iv_shopcar_inner_add"
            android:background="@drawable/btn_add"
              android:layout_height="wrap_content"
                android:layout_width="wrap_content"
            
            />
            </LinearLayout>
          <LinearLayout
               android:id="@+id/ll_shopcar_inner_downopen"
              android:gravity="center_vertical"
               android:layout_weight="1"
               android:layout_height="0dp"
                android:layout_width="wrap_content"
            android:orientation="horizontal"
             >
            
        <TextView 
             android:id="@+id/tv_shopcar_inner_param_press"
            android:layout_marginRight="16dp"
            style="@style/gray_10_line2"
            android:text="颜色分类：白色，XXL，国标18岁少年"
              android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
            
            />
        <ImageView 
            android:background="@drawable/open_down_nor"
              android:layout_height="wrap_content"
                android:layout_width="wrap_content"
            
            />
            </LinearLayout>
            </LinearLayout>
            <TextView 
                 android:id="@+id/tv_shopcar_inner_delete"
                android:background="@color/red"
                style="@style/white_14"
                android:gravity="center"
                android:text="删除"
                android:layout_weight="1"
                android:layout_width="0dp"
            android:layout_height="match_parent"
                />
            
        
            </LinearLayout>
    </LinearLayout>

