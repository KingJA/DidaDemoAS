                android:src="@drawable/market_icon" />

            <TextView
                android:id="@+id/tv_comment_market_name"
                style="@style/black_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="索马里玛丽" />
        </LinearLayout>

