<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_refund_step3_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <View
                style="@style/divider_red_vertical"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/refundstep_3" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/refund_red"
                android:orientation="vertical" >

                <TextView
                    style="@style/white_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="买家退货给商家" />

                <View
                    style="@style/divider_red_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/white_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择物流:" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/sharp_white_4"
                         >

                        <TextView
                             android:id="@+id/tv_refundm_step3_express"
                            android:layout_centerVertical="true"
                            style="@style/black_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="顺风快递" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/open_down_nor" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/white_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快递单号:" />
                    <RelativeLayout 
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/sharp_white_4" 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    <EditText
                         android:id="@+id/tv_refundm_step3_number"
                        android:imeOptions="actionSend"
                        android:textCursorDrawable="@drawable/cursor_et"
                        android:inputType="number"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        style="@style/black_14"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/red_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="看不见我:" />
                    <RelativeLayout 
                         android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    <Button
                         android:id="@+id/btn_refundm_step3_comfirm"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_centerInParent="true"
                        style="@style/red_14"
                        android:text="提交"
                      android:background="@drawable/sharp_white_4" 
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                       
                        />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                 android:id="@+id/tv_refundm_step3_date"
                style="@style/gray_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:text="2015-10-01 09:06:10" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_refund_step3_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <View
                style="@style/divider_nomal_vertical"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/refundstep_03" />
        </RelativeLayout>

        <TextView
            style="@style/gray_14"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="买家退货给商家" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/wxy/workpace/DidaDemoAS/dida_demo/src/main/res/layout/refund_step3.xml -->