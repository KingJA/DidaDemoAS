<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
  android:padding="12dp"
    >
<RelativeLayout 
    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    
    >
    <ImageView 
        android:layout_centerVertical="true"
        android:id="@+id/iv_comment_icon"
        android:scaleType="centerCrop"
      android:src="@drawable/comment_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     
        
        />
    <TextView 
        android:id="@+id/tv_group_detail_comment_rootname"
        style="@style/item_title"
         android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/iv_comment_icon"
        android:text="艾希的希望"
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"  
        
        />
    
</RelativeLayout>

<TextView 
     android:id="@+id/tv_group_detail_comment_rootcomment"
    style="@style/item_content_gray"
    android:text="10名“控制”对象迅速确定，是——瑞海公司董事长于学伟，副董事长董社轩，出资人李亮，总经理只峰，副总经理曹海军，财务总监宋齐，副总经理尚庆森（负责公司安保），副总经理刘振国（负责公司出口和装箱业务），操作部副部长贝胜强、李洪全。随后，公安塘沽分局刑侦支队4个大队的百余名刑警迅速集结，混编成4个抓捕组展开工作。市公安局有关部门迅速赶来支援。"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"  
    android:layout_marginTop="8dp"
    />
<RelativeLayout 
    android:layout_marginTop="8dp"
      android:layout_width="match_parent"
    android:layout_height="wrap_content"  
    >
    
    <TextView 
         android:id="@+id/tv_group_detail_comment_rootdate"
        style="@style/item_content_gray"
         android:layout_centerVertical="true"
        android:text="2015-07-10"
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"  
        />
    <LinearLayout 
         android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/tv_group_detail_comment_rootdate"
         android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:orientation="horizontal" 
    
        >
    <TextView 
         style="@style/item_content_gray"
        android:text="颜色分类"
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"  
        />
    <TextView 
         style="@style/item_content_gray"
        android:text="红色"
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"  
        />
    <TextView 
        android:layout_marginLeft="8dp"
         style="@style/item_content_gray"
        android:text="尺寸:"
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"  
        />
    <TextView 
         style="@style/item_content_gray"
        android:text="110cm"
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"  
        />
    </LinearLayout>
    <ImageView 
        android:layout_alignParentRight="true"
        android:background="@drawable/pinglun"
         android:layout_centerVertical="true"
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"  
        />
</RelativeLayout>
<LinearLayout 
    android:visibility="gone"
    android:id="@+id/ll_comment"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"  
    android:background="@drawable/bg_comment"
    android:orientation="vertical"
    >
     <com.dida.first.view.AbsListView.MyListView
            android:id="@+id/lv_group_detail_itemcomment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    
    
</LinearLayout>
</LinearLayout>
