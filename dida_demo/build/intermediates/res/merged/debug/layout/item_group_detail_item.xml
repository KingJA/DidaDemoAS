<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_item_group_detail_icon"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_group_detail_title"
            style="@style/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="松拓3PEAK带GPS全球定位系统，运动手表，户外运动，骑行必备神器，可带心跳记录仪，GPS记录仪，随时记录你的运动状态" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_item_group_detail_edit"
                style="@style/btn_red_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:text="规格" />
            <LinearLayout
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/tv_item_group_detail_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_group_detail_param"
                    style="@style/gray_12_line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_item_group_detail_title"
                    android:layout_marginTop="4dp"
                    android:text="T型蓝色 T型蓝色 T型蓝色" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_item_group_detail_price"
                        style="@style/red_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="158.00" />

                    <TextView
                        android:id="@+id/tv_item_group_detail_count"
                        style="@style/gray_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:text="1" />
                </LinearLayout>
            </LinearLayout>



        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
