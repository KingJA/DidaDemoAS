<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/gray_tip"
  >
  <RelativeLayout 
      android:background="@color/white"
       android:id="@+id/rl_info_group"
      android:padding="12dp"
      android:layout_width="match_parent"
    android:layout_height="48dp"
      >
      <TextView 
          android:id="@+id/tv_info_group"
          android:layout_centerVertical="true"
          style="@style/red_14"
          android:text="团购拼购"
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          
          />
      <ImageView 
          android:id="@+id/iv_info_group"
           android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:background="@drawable/bg_seled"
           android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          />
      
  </RelativeLayout> 
  <View
      style="@style/divider_nomal_horizontal"
      
      /> 
  <RelativeLayout 
       android:background="@color/white"
       android:id="@+id/rl_info_aa"
      android:padding="12dp"
      android:layout_width="match_parent"
    android:layout_height="48dp"
      >
      <TextView 
           android:id="@+id/tv_info_aa"
          android:layout_centerVertical="true"
          style="@style/black_14"
          android:text="AA拼购"
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          
          />
      <ImageView 
           android:id="@+id/iv_info_aa"
          android:visibility="gone"
           android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:background="@drawable/bg_seled"
           android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          />
      
  </RelativeLayout>  
  <RelativeLayout 
       android:layout_width="match_parent"
    android:layout_height="match_parent"
      
      >
  <LinearLayout 
       android:layout_marginTop="8dp"
       android:background="@color/white"
      android:id="@+id/ll_group_info"
       android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
      android:paddingTop="16dp"
      android:paddingRight="12dp"
      android:paddingLeft="12dp"
      >
      <LinearLayout 
           android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
          
          >
           <TextView 
          android:layout_centerVertical="true"
          style="@style/black_12"
          android:text="新手必看晒单指引"
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          
          /> <TextView 
          android:layout_centerVertical="true"
          style="@style/gray_12"
          android:text="（如需AA拼购请先选择AA拼购）"
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          
          />
      </LinearLayout>
      <TextView 
          android:layout_marginTop="12dp"
          android:layout_centerVertical="true"
          style="@style/black_12"
          android:text="团购晒单准备："
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          
          />
      <TextView 
          android:layout_marginTop="5dp"
          android:layout_centerVertical="true"
          style="@style/black_12"
          android:text="        在商品列表中选择您要发起团购拼购的商品，在详情中选择团购，输入与商家协商好的团购价格，预付该价格形成预付单。"
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          />
      <TextView 
          android:layout_marginTop="16dp"
          android:layout_centerVertical="true"
          style="@style/gray_12"
          android:text="晒单步骤："
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          />
       <TextView 
            android:layout_marginTop="16dp"
               android:text="第一步：在该页选择团购拼购;"
          style="@style/gray_12"
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          
          />
           <LinearLayout 
                android:layout_marginTop="16dp"
           android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
          
          >
           <TextView 
               android:text="第二步："
          style="@style/gray_12"
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          
          /> <TextView 
          style="@style/gray_12"
          android:text="单选或多选您的预付单，点击确认后填写拼购所需信息，发起拼购；"
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          
          />
      </LinearLayout>
           <LinearLayout 
                android:layout_marginTop="16dp"
           android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
          
          >
           <TextView 
               android:text="第三步："
          style="@style/gray_12"
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          
          /> <TextView 
          style="@style/gray_12"
          android:text="等待商家确认您的团购拼购信息准确无误后，同意您的团购请求，代表您拼购成功！"
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          
          />
      </LinearLayout>
      
      
  </LinearLayout>
  <LinearLayout 
      android:visibility="gone"
      android:layout_marginTop="8dp"
       android:background="@color/white"
      android:id="@+id/ll_aa_info"
       android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
      android:paddingTop="16dp"
      android:paddingRight="12dp"
      android:paddingLeft="12dp"
      >
      <LinearLayout 
           android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
          
          >
           <TextView 
          android:layout_centerVertical="true"
          style="@style/black_12"
          android:text="新手必看晒单指引"
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          
          /> <TextView 
          android:layout_centerVertical="true"
          style="@style/gray_12"
          android:text="（如需团购拼购请先选择团购拼购）"
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          
          />
      </LinearLayout>
      <TextView 
          android:layout_marginTop="12dp"
          android:layout_centerVertical="true"
          style="@style/black_12"
          android:text="AA晒单准备："
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          
          />
      <TextView 
          android:layout_marginTop="5dp"
          android:layout_centerVertical="true"
          style="@style/black_12"
          android:text="        在商品列表中选择您要发起AA拼购的商品，在详情中选择AA后形成预付单。"
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          />
      <TextView 
          android:layout_marginTop="16dp"
          android:layout_centerVertical="true"
          style="@style/gray_12"
          android:text="晒单步骤："
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          />
       <TextView 
            android:layout_marginTop="16dp"
               android:text="第一步：在该页选择AA拼购;"
          style="@style/gray_12"
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          
          />
           <LinearLayout 
                android:layout_marginTop="16dp"
           android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
          
          >
           <TextView 
               android:text="第二步："
          style="@style/gray_12"
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          
          /> <TextView 
          style="@style/gray_12"
          android:text="单选或多选您的预付单，点击确认后填写拼购所需信息（包括AA名称、AA份数，邀请好友）后发布，发布AA拼购成功；"
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          
          />
      </LinearLayout>
           <LinearLayout 
                android:layout_marginTop="16dp"
           android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
          
          >
           <TextView 
               android:text="第三步："
          style="@style/gray_12"
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          
          /> <TextView 
          style="@style/gray_12"
          android:text="作为发起人，将默认参与支付AA的第一份价格。"
          android:layout_width="wrap_content"
    android:layout_height="wrap_content"
          
          />
      </LinearLayout>
      
      
  </LinearLayout>

           <Button 
               android:layout_alignParentBottom="true"
                android:id="@+id/btn_info_confirm"
               android:layout_marginLeft="12dp"
               android:layout_marginRight="12dp"
               android:background="@drawable/selector_red2red_deep"
               android:layout_marginBottom="48dp"
               android:textColor="@color/white"
               android:text="确认"
                android:layout_width="match_parent"
    android:layout_height="wrap_content" 
               
               />
           </RelativeLayout>
</LinearLayout>
