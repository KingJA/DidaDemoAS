<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_base_mylbu">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_notitle_moveimgview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparency_30"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/ll_notitle_moveimgview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"></LinearLayout>

        <TextView

            android:id="@+id/tv_auto_title"
            style="@style/white_14_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ll_notitle_moveimgview"
           />


    </RelativeLayout>


</RelativeLayout>
