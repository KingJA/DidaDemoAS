<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardElevation="2px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_market_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/tv_market_detail_head_title"
                style="@style/black_14_line2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="红黄蓝童装，童装女童春装2015春秋新款韩版卡通休闲儿童套装2-3-4-5-6岁童装女童冬装2015红黄蓝童装，童装女童春装2015春秋新款韩版卡通休闲儿童套装2-3-4-5-6岁童装女童冬装2015新款儿童新款儿童卫衣三件套女大童运动秋装套装10岁女孩" />


            <View style="@style/divider_nomal_vertical" />

            <LinearLayout
                android:id="@+id/ll_market_detail_head_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/share" />

                <TextView
                    style="@style/gray_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="分享" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_market_detail_head_price"
            style="@style/red_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="668.00" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存:" />

                <TextView
                    android:id="@+id/tv_market_detail_head_stock"
                    style="@style/red_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="800" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    style="@style/gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="销量:" />

                <TextView
                    android:id="@+id/tv_market_detail_head_count"
                    style="@style/red_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1024" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_market_detail_head_address"
                    style="@style/gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浙江金华" />

            </LinearLayout>



    </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView><!-- From: file:/E:/wxy/workpace/DidaDemoAS/dida_demo/src/main/res/layout/market_detail_head.xml -->