<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >

            <TextView
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/red"
                android:id="@+id/tv__mypingou_mime"
                style="@style/black_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我发起的" />

            <View style="@style/divider_nomal_vertical" />

            <TextView
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/tv__mypingou_join"
                style="@style/black_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我参与的" />

            <View style="@style/divider_nomal_vertical" />

            <TextView
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/tv__mypingou_invate"
                style="@style/black_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="邀请我的" />


        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_mypingou_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingRight="14dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/tab_red" />
        </FrameLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_marginTop="4dp"
        android:id="@+id/vp_mine_mypingou"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout><!-- From: file:/E:/wxy/workpace/DidaDemoAS/dida_demo/src/main/res/layout/activity_mine_pingou.xml -->