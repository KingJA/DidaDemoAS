<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical" >
         

    <LinearLayout
        android:id="@+id/ll_findpsd_code_focus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入注册时的手机号码，然会点击获取验证码" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_bg"
            android:padding="8dp" >

            <EditText
                android:id="@+id/et_findpsd_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="手机号"
                android:inputType="number" />

            <ImageView
                android:id="@+id/iv_findpsd_regex_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/regex"
                android:visibility="invisible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_bg"
                android:padding="8dp" >

                <EditText
                    android:id="@+id/et_findpsd_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_findpsd_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_lnull_bgray_r4"
                android:minHeight="0dp"
                android:padding="8dp"
                android:text="获取验证码"
                android:textColor="#ffffff" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_findpsd_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_lnull_bgray_r4"
            android:minHeight="0dp"
            android:padding="8dp"
            android:text="进行验证"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/wxy/workpace/DidaDemoAS/dida_demo/src/main/res/layout/activity_findpsd_code.xml -->