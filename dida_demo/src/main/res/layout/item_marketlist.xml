<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardElevation="2px"
    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <com.facebook.drawee.view.SimpleDraweeView
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_market_item_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fresco:viewAspectRatio="0.77"
        fresco:placeholderImage="@color/gray_light"
        fresco:actualImageScaleType="focusCrop"
        fresco:progressBarImage="@drawable/progress"
        fresco:progressBarImageScaleType="centerInside"
        fresco:progressBarAutoRotateInterval="3000"/>
    <TextView
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:id="@+id/tv_market_item_title"
        style="@style/black_14_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="夏季女装韩版紧身休闲运动，粥粥同款，非常适合路人甲。" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        >



        <TextView
            android:id="@+id/tv_market_item_price"
            style="@style/red_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="580.00" />

        <TextView
            android:id="@+id/tv_market_item_count"
            style="@style/gray_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="860" />

        <TextView
            android:layout_marginRight="4dp"
            style="@style/gray_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_market_item_count"
            android:text="已售" />
    </RelativeLayout>

</LinearLayout>
</android.support.v7.widget.CardView>
