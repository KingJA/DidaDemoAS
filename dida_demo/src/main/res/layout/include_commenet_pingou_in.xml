<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:descendantFocusability="blocksDescendants">


    <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/civ_comment_pingou_in_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        fresco:placeholderImage="@color/gray_light"
        fresco:actualImageScaleType="focusCrop"
        fresco:roundAsCircle="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_comment_pingou_in_replyFrom"
                style="@style/blue_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1860年的第一场雪" />

            <TextView
                style="@style/black_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复" />

            <TextView
                android:id="@+id/tv_comment_pingou_in_replyTo"
                style="@style/blue_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="喜马拉雅oo" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_comment_pingou_in_content"
            style="@style/gray_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="这都可以！[笑cry] //@饭二的傻子: //@我和宠物的日常:卧了个槽！[吃惊]妈妈问我为什么跪着刷微博" />


        <TextView
            android:id="@+id/tv_comment_pingou_in_date"
            android:gravity="end"
            style="@style/gray_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10" />


    </LinearLayout>

</LinearLayout>