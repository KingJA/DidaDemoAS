<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="12dp">

        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sdv_storeDetail_icon"
            android:layout_width="58dp"
            android:layout_height="58dp"
            fresco:placeholderImage="@color/gray_light"
            fresco:actualImageScaleType="focusCrop"
            fresco:roundAsCircle="true"
            />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/sdv_storeDetail_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_storeDetail_name"
                style="@style/black_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="北极圈专卖" />

            <TextView
                android:id="@+id/tv_storeDetail_fance"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                style="@style/gray_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="255 粉丝" />

            <com.dida.first.view.KingJA_GradeView
                android:id="@+id/kgv_storeDetail_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_centerVertical="true"
            android:gravity="center"

            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="wrap_content">

        <LinearLayout


            android:id="@+id/ll_store_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/shape_lnull_bred_r8"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"

            >

            <ImageView
                android:id="@+id/iv_store_star"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/fav_line" />

            <TextView
                android:id="@+id/tv_store_favorite"
                style="@style/white_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏" />

        </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

