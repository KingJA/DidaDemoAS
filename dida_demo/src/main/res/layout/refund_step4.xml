<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
         android:id="@+id/ll_refund_step4_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout 
             android:layout_width="wrap_content"
        android:layout_height="match_parent"
            >
                
        <ImageView
             android:layout_centerHorizontal="true"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/refundstep_4" />
</RelativeLayout>
<LinearLayout 
    android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:orientation="vertical"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/refund_white"
            android:orientation="vertical" >

            <TextView
                style="@style/black_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商家确认收货退款完成" />
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                style="@style/divider_nomal_horizontal"
                />


                <TextView
                     android:id="@+id/tv_refundm_step4_ok"
                    style="@style/red_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款完成" />
                <TextView
                     android:layout_marginTop="8dp"
                    style="@style/gray_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款将自动打款到支付宝或银行卡" />

                
            <LinearLayout
                  android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/gray_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款金额:" />

               <TextView
                    android:id="@+id/tv_refundm_step4_money"
                   android:layout_marginLeft="8dp"
                    style="@style/red_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="78.00" />
               <TextView
                    style="@style/gray_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元" />
            </LinearLayout>
        </LinearLayout>
        <TextView 
             android:id="@+id/tv_refundm_step4_date"
            android:layout_marginBottom="40dp"
            style="@style/gray_14"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            android:text="2015-10-01 09:06:10"
             android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            /></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_refund_step4_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout 
             android:layout_width="wrap_content"
        android:layout_height="match_parent"
            >
        <ImageView
             android:layout_centerHorizontal="true"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/refundstep_04" />
</RelativeLayout>
<TextView 
    android:gravity="center_vertical"
    android:layout_marginLeft="16dp"
     android:layout_marginBottom="40dp"
    android:text="商家确认收货退款完成"
    style="@style/gray_14"
    android:layout_width="match_parent"
            android:layout_height="28dp"
    
    />
    </LinearLayout>

</LinearLayout>