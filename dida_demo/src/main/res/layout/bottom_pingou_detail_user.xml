<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:background="@drawable/selector_white2gray"
        android:id="@+id/ll_pingou_user_fav"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pingou_user_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_fav_nor" />

        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_pingou_user_fav"
            style="@style/red_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏" />
    </LinearLayout>

    <View style="@style/divider_nomal_vertical"></View>



    <TextView
        android:background="@color/red"
        android:id="@+id/tv_pingou_user_join"
        style="@style/white_16"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="立即加入" />

</LinearLayout>
